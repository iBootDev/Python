from __future__ import absolute_import
from __future__ import print_function
import crypt
import time
from six.moves import input

print("Simple pass encrypt. Twitter: @ibootdev")
time.sleep(1)
print("$1 = MD5; $5 = Sha256; $6 = Sha512")
time.sleep(1)
def gerar_passwd():
    my_pass = input ('Type your pass: ')
    time.sleep(1)
    pass_generated = crypt.crypt(my_pass, "$6$SalG4ndo$")#Encrypt the pass, change the number of the first "$" for MD5; Sha256; Sha512
    print("Your pass is: ", pass_generated)
if __name__ == '__main__':
    print((gerar_passwd()))
